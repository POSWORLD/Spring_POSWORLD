<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.posco.posworld.user.repository.UserMapper">
    <select id="getUser" resultType="UserDto">
        SELECT
            id, userId, name, gender, proPhoto
        From
            usertbl
    </select>
    <select id="getUserById" resultType="UserDto" parameterType="UserDto">
        SELECT
            id, userId, name, gender, proPhoto
        FROM
            usertbl
        WHERE
            userId= #{userId}
    </select>

    <insert id="insertUser" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO usertbl (userId,pw,name,gender)
        values (#{userId}, #{pw}, #{name}, #{gender});
    </insert>


    <select id="getUserByUserIdAndPassword" resultType="UserDto">
        SELECT
            id, userId, name, gender, proPhoto
        FROM
            usertbl
        WHERE
            userId=#{userId} and pw=#{pw}
    </select>
</mapper>